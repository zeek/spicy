#
# @TEST-EXEC: btest-diff output

module test;

public type X = unit {
    a: b"Axy";
    b: uint32(6) &synchronized;
    c: b"Cxy" &synchronized;
    d: /Dxy/ &synchronized;

    on %synced { self.confirm(); }
    on %done { print self; }
};
