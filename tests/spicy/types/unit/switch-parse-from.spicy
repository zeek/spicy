# @TEST-DOC: Tests handling of unit switch `&parse-at` and `&parse-from` attributes.

module Mini;

public type X = unit {
    a: bytes &size=1;
    switch ( self.a ) {
        * -> b: bytes &eod;
    } &parse-from=self.a;
};

public type Y = unit {
    a: bytes &size=1;
    switch ( self.a ) {
        * -> b: bytes &eod;
    } &parse-at=self.input();
};
