# @TEST-START-FILE x1.spicy
module x1;

public type X1 = unit {
    x1: uint8;
};
# @TEST-END-FILE

# @TEST-START-FILE x2.spicy
module x2;

import x1;

public type X2 = unit {
    x2: uint8;
};
# @TEST-END-FILE
